<% layout('layouts/boilerplate')%>
<div class="container">
    <h1>List of Collections</h1>
    <a class='btn btn-success mb-2' href="/collections/new">Add New Collection</a>
    <% for(collection of collections){ %>
        <div class="card mb-3 shadow">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%=collection.image.url%>" class='img-fluid'>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class='card-title'><a href="/collections/<%= collection._id %>">
                            <%= collection.title %></a>
                        </h5>
                        <p class='card-text'><%= collection.description %></p>
                        <p class="card-text">
                            <small class="text-muted">Made by <a href="/users/<%=collection.creator._id%>">
                                <%=collection.creator.username%>
                            </a></small>
                        </p>
                        <a href='/collections/<%=collection._id%>' class="btn btn-primary">See <%=collection.title%></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>